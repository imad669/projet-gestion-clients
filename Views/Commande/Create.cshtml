@model Gestions_Client_Commande.Models.Commande

@{
    ViewData["Title"] = "Ajouter une commande pour " + ViewBag.ClientNom;
}

<h2>Ajouter une commande pour @ViewBag.ClientNom</h2>

<form asp-action="Creer" method="post">
    <!-- Champ caché pour relier la commande au bon client -->
    <input type="hidden" asp-for="IdClient" value="@ViewBag.ClientId" />

    <div class="form-group">
        <label asp-for="DateCommande"></label>
        <input asp-for="DateCommande" class="form-control" type="date" />
        <span asp-validation-for="DateCommande" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Montant"></label>
        <input asp-for="Montant" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Montant" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">💾 Ajouter</button>
    <a asp-action="Commandes" asp-controller="Client" asp-route-id="@ViewBag.ClientId" class="btn btn-secondary">Annuler</a>
</form>
